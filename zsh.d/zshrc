# open files selected in FZF with vim
fv(){
    # include hidden files if "h" flag passed
    if [[ "$1" = "h" ]];
    then
        vim $(fd -H -t f | fzf -m)
    else
        vim $(fd -t f | fzf -m)
    fi
}

